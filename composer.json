{
  "name": "app/core",
  "description": "Ein PHP-Framework mit einem performanten DI-Container",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Ihr Name",
      "email": "ihre-email@example.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^8.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "Src\\Core\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Core\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  }
}